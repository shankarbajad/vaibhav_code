<div class="nested-fields">

  <div class="form-group">
    <label class="form-label">Title <small>Descriptive video title</small></label>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>

  <br/>

  <div class="form-group">
    <label class="form-label">Video Link <small>Copy and paste YouTube or Vimeo share link.</small></label>
    <%= f.url_field :link, placeholder: "http://", :class => 'form-control' %>
  </div>

  <br/>

  <div class="form-group">
    <label class="form-label">Description <small>Please add a brief video description.</small></label>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>

  <br/>

  <div class="form-group">
    <label class="form-label">Tags <small>Please add keyword tags for this video.</small></label>
    <%= f.text_area :tags, :class => 'form-control' %>
  </div>

  <%= link_to_remove_association "Remove", f, class: "btn btn-sm" %>
  
</div>