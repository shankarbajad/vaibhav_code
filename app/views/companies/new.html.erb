<div class="bgcolor-white">
  <%= form_for(@company) do |f| %>
    <%= render 'companies/new/header', f:f %>
    <div class="container">
      <div class="row">
        <div class="col-xl-3 col-lg-4">
          <aside class="profile-side">
            <%= f.submit class: "btn btn-rounded btn-block btn-warning sign-up " %>
            <br/>

            <section class="box-typical box-transparent profile-side-user no-padding m-b-0">
              <div class="p-a-lg">
                <%= render 'companies/edit/nav/logo', f: f %>
                <!-- <button type="button" class="btn btn-rounded">Invest</button> -->
                <!-- <br/><br/> -->

                <!-- <h3 class="text-muted bold ls1">FOLLOW US</h3> -->
                <%#= render 'companies/show/nav/social_links' %>
                <%#= render 'companies/show/nav/founders' %>
              </div>
              <hr class="m-a-0"/>
              <div class="p-a" id="sticker">
                <%= render 'companies/show/nav/links' %>
              </div>
            </section>
          </aside><!--.profile-side-->
        </div>

        <div class="col-lg-offset-1 col-lg-8 col-md-offset-1 col-md-8 col-sm-6 col-xs-12 show">
          <%= f.hidden_field :creator_id, value: current_user.id %>
          <%= render 'form', f: f %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<style type="text/css">
.stick {
  position:fixed;
  top:70px !important;
  border: 1px solid #d8e2e7;
}
.profile-side {
  margin: -245px 0 21px 20px;
}
</style>
<script type="text/javascript">
  $(document).ready(function() {
    var s = $("#sticker");
    var pos = s.position();                    
    $(window).scroll(function() {
        var windowpos = $(window).scrollTop();
        if (windowpos >= pos.top) {
            s.addClass("stick");
        } else {
            s.removeClass("stick"); 
        }
    });
});
</script>

