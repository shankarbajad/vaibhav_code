<section id="media">
  <h6>UPDATE</h6>

  <div class="form-group row">
    <div class="col-md-3">
      <h5>Updates<br/>
      </h5>
    </div>
    <div class="col-md-9">
      <% @company.updates.each do |update| %>
        <p style="border: 1px solid #DADADA;padding: 7px;">
        <span>Title: </span> <%= update.title %> <br />
        <span>Brief Description: </span> <%= update.brief_description %> <br />
        <span>Detailed Description: </span> <%= update.detailed_description %>
        </p>
      <% end %>
    </div>
  </div>

</section>



            
            

          