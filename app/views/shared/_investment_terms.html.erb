
<!-- Modal -->
<div class="modal fade" id="investModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content p-a-0">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="m-a-0" id="myModalLabel">Interested in Investing?</h4>
      </div>
      <div class="modal-body p-a-0">
        <div class="p-a-lg">
          <%= form_for(Term.new) do |f| %>
          <div class="form-group">
            <label for="email" class="form-label">How interested are you in this investment?</label>
            <%= f.select :investment_interested, options_for_select(["somewhat interested", "very interested", "extremely interested", "ready to invest"],:disabled => ["Select One"]), :class => 'form-control' %>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">What is you impact investment experience?</label>
            <%= f.select :investment_experience, options_for_select(["beginner", "a few investments", "experienced"],:disabled => ["Select One"]), :class => ' form-control' %>          
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Any immediate questions, comments, or thoughts you want to share?</label>
            <%= f.text_area :description,class: "form-control" %>          
          </div>
        </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit "Learn More About Investing", :class=> "btn btn-primary" %>
          </div>
          <% end %>
      </div>      
    </div>
  </div>
</div>