
	<div class="page-content">
		<div class="container-fluid">
			<section class="box-typical faq-page">
				<form method="get" action="" class="faq-page-header-search">
					<div class="search">
						<input type="text" name="q" value="<%= params[:q] %>" class="form-control form-control-rounded" placeholder="Find answers (design, help, password. billing)"/>
						<button type="submit" class="find">
							<i class="font-icon font-icon-search"></i>
						</button>
					</div>
				</form><!--.faq-page-header-search-->

				<section class="faq-page-cats">
					<div class="row">
						<div class="col-md-4">
							<div class="faq-page-cat">
								<div class="faq-page-cat-icon"><img src="img/faq-1.png" alt=""></div>
								<div class="faq-page-cat-title">
									<a href="#">Getting Started</a>
								</div>
								<div class="faq-page-cat-txt">New to Canva? Learn the basic to get the most out of Canva</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="faq-page-cat">
								<div class="faq-page-cat-icon"><img src="img/faq-2.png" alt=""></div>
								<div class="faq-page-cat-title">
									<a href="#">Have a problem</a>
								</div>
								<div class="faq-page-cat-txt">New to Canva? Learn the basic to get the most out of Canva</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="faq-page-cat">
								<div class="faq-page-cat-icon"><img src="img/faq-3.png" alt=""></div>
								<div class="faq-page-cat-title">
									<a href="#">Suggest a feature</a>
								</div>
								<div class="faq-page-cat-txt">New to Canva? Learn the basic to get the most out of Canva</div>
							</div>
						</div>
					</div><!--.row-->
				</section><!--.faq-page-cats-->

				<section class="faq-page-questions">
					<h2>Common questions</h2>
          <% @faqs.in_groups_of(2).each do |group| %>
          <div class="row">
            <% group.compact.each do |faq| %>
              <div class="col-md-6">
                <article class="faq-page-quest">
                  <header class="faq-page-quest-title">
                    <%= link_to faq.question, faq_url(faq) %>
                  </header>
                  <p>
                    <%= faq.answer %>
                  </p>
                </article>
              </div>
            <% end %>
					</div>
          <% end %>
				</section><!--.faq-page-questions-->
			</section><!--.faq-page-->
		</div><!--.container-fluid-->
	</div><!--.page-content-->