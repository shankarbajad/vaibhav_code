<style type="text/css">

body.minimal {background: url(http://vestedworld.com/app/uploads/2016/03/1-1600x870.jpg); background-size: cover;}


</style>

<div class="container-row">
  <div class="col-sm-3 col-centered no-padding bgcolor-primary" style="border-radius: 0 0 6px 6px;">
    <p class="text-center">
      <%= image_tag("white-mark.png", style: "width: 60px;") %>
      <%= image_tag("white-type.png", style: "width: 140px; margin-left: -20px;") %>
    </p>

    <section class="p-a-0 m-b-0"> 
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => "", style: ""}) do |f| %>
        <h3 class="text-center m-t text-white">Welcome Back</h3>
        <!-- <h6 class="text-center text-white">You'll be done in minutes.</h6> -->
        <hr class="m-a-0"/>
        <div class="m-x m-y p-a-lg">
          <%#= devise_error_messages! %>

          <p>
            <%= link_to "Login With Linkedin", user_linkedin_omniauth_authorize_path, class: "btn btn-block btn-rounded btn-primary" %>
          </p>

          <p class="text-white text-center">Or, signup using your email address</p>


          <div class="form-group">
            <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "Full Name"%>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: "E-Mail"%>
          </div>
          <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
          </div>
          <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation"%>
          </div>

          <p class="text-center text-white m-y">
            Already have an account?
            <%- if devise_mapping.registerable? %>
              <u>
                <%= link_to 'Sign in', new_user_session_path, class: 'text-warning bold right'  %>
              </u>  
            <% end -%>
          </p>

          <br/>
          <%= f.submit 'Create a Free Account', class: "btn btn-block btn-rounded btn-white btn-transparent" %>



          
          <p class="sign-note text-center text-muted m-y">
            <small>I agree to the Terms of Use and confirm that I am and accredited Investor.</small>
          </p>
        </div>
      <% end %>  
    </section>
  </div>
</div>




