<% header_background_url = @user.background_image.present? ? @user.background_image_url : 'http://vestedworld.com/app/uploads/2016/03/3-1600x870.jpg' %>

<div class="profile-header-photo gradient reduced-height" style="background-image: url(<%= header_background_url %>)">
  <div class="profile-header-photo-in">
    <div class="tbl-cell">
      <div class="info-block">
        <div class="container">

          <div class="row">
            <div class="col-xl-8 col-xl-offset-4 col-lg-8 col-lg-offset-4 col-md-offset-0">
              <div class="tbl info-tbl">
                <div class="tbl-row">
                  <div class="tbl-cell">
                    <p class="title"><%= @user.name %></p>
                    <p><%= @user.profile %></p>
                  </div>
                  <div class="tbl-cell tbl-cell-stat">
                    <p><%= f.submit "Update Account", class: "btn btn-danger btn-block m-b",:id=>"validate-image" %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <% if (current_user && @user.eql?(current_user)) || (current_user && current_user.admin?) %>
      <%= link_to user_path(@user), type: "button", class: "change-cover m-a-lg" do %>
      <i class="font-icon font-icon"></i>View Profile
      <% end %>
    <% end %>


</div><!--.profile-header-photo-->