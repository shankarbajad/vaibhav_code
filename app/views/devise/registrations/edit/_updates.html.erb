<section>
  <h6>UPDATES</h6>
  <div class="form-group">
    <div id="profile_updates" class="bgcolor-light-grey p-a-lg brad-6">
      <div class="row">
        <div class="col-sm-9">
          Updates
          <small class="text-muted"></small>
          <div id="company_photos">
            <%= f.fields_for :updates do |update_form| %>
              <%= render 'update_fields', f: update_form %>
            <% end %>
          </div>
          <div class="col-sm-3">
            <div class="links">
              <%= link_to_add_association 'Add Update', f, :updates %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <br/><br/>

  <div class="row">
    <div class="form-group">
      <div class="col-md-12">
        <label class="form-label">Current Password</label>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>
  </div>

</section>