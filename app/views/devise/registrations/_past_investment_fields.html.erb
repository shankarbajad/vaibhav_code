<div class="table nested-fields">  
	<div class="clearfix row">
	  <div class="col-md-12">
	  	<div class="row form-group">
	  		<div class="col-sm-12">
					<div class="form-group">
						<label class="form-label">Year<span class="text-muted">What year did you invest?</span></label>
						<%= f.select :year, (Time.zone.now.year - 56)..(Time.zone.now.year ) ,prompt: "#{Time.zone.now.year}"%>
					</div>
				</div>
			</div>

			<div class="row form-group">
				<div class="col-md-6">
					<label class="form-label">
						Company<span class="text-muted">What was the name comany you invested in?</span></label>
					<%= f.text_field :company,class: "form-control" %>
				</div>
				<!-- <div class="col-sm-6">
					<label class="form-label">Name<span class="text-muted">What is the name of the investment?</span></label>
					<%= f.text_field :name ,class: "form-control"%>
				</div> -->
				<div class="col-sm-6">
					<div class="form-group">
						<label class="form-label">Industry<span class="text-muted">What is industry?</span></label>
						<%= f.collection_select :industry, Company::INDUSTRY.collect{|pt| [pt.flatten.first,pt.flatten.last] }, :first, :last %>
					</div>
				</div>
			</div>			
			<%= f.hidden_field :created_by, value: @user.id, class: "form-control" %>
			<div class="form-group row">
				<div class="col-sm-3">
					<div class="form-group">
						<label class="form-label">Instrument<span class="text-muted">What kind of investment?</span></label>
						<%= f.collection_select :product, PastInvestment::PRODUCT.collect{|pt| [pt.flatten.first,pt.flatten.last] }, :first, :last %>
					</div>
				</div>
				<div class="col-sm-3">
					<div class="form-group">
						<label class="form-label"> Stage<span class="text-muted">What stage?</span></label>
						<%= f.collection_select :funding_stage, PastInvestment::STAGE.collect{|pt| [pt.flatten.first,pt.flatten.last] }, :first, :last, {}, { :class => 'stag-finding' } %>
					</div>
				</div>
				<div class="col-sm-3">
					<div class="form-group">
						<label class="form-label">Impact Investment?<span class="text-muted">Impact-focused?</span></label>
						<%= f.check_box :impact_investment %> 
					</div>
				</div>

				<div class="col-sm-3">
					<div class="form-group">
						<label class="form-label">Still Holding?<span class="text-muted">Holding/Exited?</span></label>
						<%= f.check_box :still_holding %> 
					</div>
				</div>
			</div>
		</div>
	</div>
	<p>
		<%= link_to_remove_association "Remove", f,class: "btn btn-sm btn-danger" %>
	</p>
	<hr/>
</div>

<style type="text/css">
	.stag-finding{
		width: 170px;
	}
</style>