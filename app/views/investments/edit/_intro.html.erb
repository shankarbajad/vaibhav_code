<section id="nav-intro">
	<h6>1. INTRODUCTION</H6>
	<h5 class="bold m-b-0">General Investment Information</h5>
  <p class="text-muted">Please complete a term sheet.</u></b></p>
  <br/>
  <div class="form-group">
    <label class="form-label">Select Company<small> Please selete the company this investment is associated with.</small></label>
    <%= f.collection_select :company_id, Company.all, :id, :name, :include_blank => "Please Select",  class: "form-control width-100p" %>
  </div>
  <br/>               
	<div class="form-group">
  	<label class="form-label">Title<small> Describes the financing.</small></label>
	  <%= f.text_field :title, class: "form-control", placeholder: "Investment Title" %>
	</div>
	<br/>
	<div class="form-group">
	  <label class="form-label">
	    Pitch Teaser<small> Very brief description.</small>
	  </label>
	  <%= f.text_area :description , class: "form-control" , rows: "5", placeholder: "Teaser Description" %>
	</div>
	<div class="form-group">
	  <label class="form-label">
	    Bachground Header
	  </label>
	  <% if f.object.background_image.present? %>
	    <%= image_tag f.object.background_image.url,:class => "image-responsive p-a-0", :id => "bg_output" %>
	  <% else %>
	    <%= image_tag("bg.jpeg", :class => "image-responsive p-a-0", :id => "output")%>
	  <% end %>  
	  <%= f.file_field :background_image , class: "form-control", :onchange=>"loadFile(event)"%>
	</div>
</section>

<script type="text/javascript">
  var loadFile = function(event) {
    var bg_output = document.getElementById('bg_output');
    output.src = URL.createObjectURL(event.target.files[0]);
  };
</script>
