<section id="nav-investors">
  <h6>VestedAngels and Select Investors</h6>
  

  <% @investment.staffs.send("Investor").map(&:user).each do |invester|%>
    <% @image = if invester.avatar.present?
      invester.avatar.url
    else 
      "http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png"
    end %>
    <div class="row">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-5">
            <img src="<%= @image %>" class="img-responsive img-rounded" style="width: 100%;">
          </div>
          <div class="col-md-7">
            <h6 class="m-a-0"><%=invester.name%></h6>
            <p class="text-muted"><%=invester.brief_description%></p>
          </div>
        </div>
      </div>
    </div>
    <br/>
  <%end%>  
</section>
