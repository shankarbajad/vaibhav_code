<section id="nav-advisors">
  <h6>Notable Advisors</h6>


  <% @investment.staffs.send("Advisor").map(&:user).each do |advisor|%>
    <% @image = if advisor.avatar.present?
      advisor.avatar.url
    else 
      "http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png"
    end %>
    <div class="row">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-5">
            <img src="<%= @image%>" class="img-responsive img-rounded" style="width: 100%;">
          </div>
          <div class="col-md-7">
            <h6 class="m-a-0"><%=advisor.name%></h6>
            <p class="text-muted"><%=advisor.brief_description%></p>
          </div>
        </div>
      </div>    
    </div>
    <br/>
  <%end%>
  
</section>
