<div class="nested-fields">

  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :description %>
      <%= term.text_field :description, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= term.label :security %>
      <%= term.select :security, options_for_select(TermSheet::SECURITY_DATA), :class => 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :automatic_conversion %>
      <%= term.select :automatic_conversion, options_for_select(TermSheet::AUTOMIATIC_CONVERSION), :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= term.label :interest_rate %>
      <%= term.text_field :interest_rate, :class => 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :interest_payments %>
      <%= term.text_field :interest_payments, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= term.label :maturity_date %>
      <%= term.text_field :maturity_date, :class => 'form-control datetimepicker4' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :conversion_discount %>
      <%= term.text_field :conversion_discount, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= term.label :conversion_cap %>
      <%= term.text_field :conversion_cap, :class => 'form-control' %>
