      <%= term.text_field :optional_conversion, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= term.label :redemption_option %>
      <%= term.text_field :redemption_option, :class => 'form-control' %>
    </div>
  </div>


  <div class="row form-group">
