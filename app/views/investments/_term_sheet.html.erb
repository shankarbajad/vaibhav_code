  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :target_closing_date %>
      <%= term.text_field :target_closing_date, :class => 'form-control datetimepicker4' %>
    </div>

     <div class="col-md-6">
      <%= term.label :other %>
      <%= term.text_field :other, :class => 'form-control' %>
    </div>
  </div>

</div>


<script type="text/javascript">
  $(function() {
    $('.datetimepicker4').datetimepicker({
      format : "DD-MM-YYYY"
    });
  });


</script>