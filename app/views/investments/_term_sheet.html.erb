    </div>

    <div class="col-md-6">
      <%= term.label :maximum_fund_investors %>
      <%= term.text_field :maximum_fund_investors, :class => 'form-control' %>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :management_fee %>
      <%= term.text_field :management_fee, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= term.label :maximum_fund_investors %>
      <%= term.text_field :maximum_fund_investors, :class => 'form-control' %>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-md-6">
      <%= term.label :carried_interest %>
      <%= term.text_field :carried_interest, :class => 'form-control' %>
